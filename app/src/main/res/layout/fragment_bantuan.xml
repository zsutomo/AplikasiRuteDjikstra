<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tugasakhir.bima.aplikasirutedjikstra.Bantuan">


    <include
        android:id="@+id/toolbar_bantuan"
        layout="@layout/toolbar_bantuan" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_bantuan"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Cara Menggunakan Aplikasi"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.bluejamesbond.text.DocumentView
                android:id="@+id/textView_petunjuk"
                app:documentView_insetPaddingBottom="5dp"
                app:documentView_insetPaddingLeft="10dp"
                app:documentView_insetPaddingRight="10dp"
                app:documentView_textAlignment="justified"
                app:documentView_textColor="@android:color/black"
                app:documentView_textSize="18sp"
                app:documentView_textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>
