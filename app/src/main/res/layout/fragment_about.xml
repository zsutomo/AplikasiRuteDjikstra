<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tugasakhir.bima.aplikasirutedjikstra.About">

    <include
        android:id="@+id/toolbar_about"
        layout="@layout/toolbar_about"/>
    <ScrollView
        android:layout_below="@+id/toolbar_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.bluejamesbond.text.DocumentView
        android:layout_marginTop="5dp"
        android:id="@+id/textView_bantuan"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:documentView_textAlignment="justified"
        app:documentView_textStyle="bold"
        app:documentView_insetPaddingBottom="5dp"
        app:documentView_insetPaddingLeft="10dp"
        app:documentView_insetPaddingRight="10dp"
        app:documentView_textColor="@android:color/black"
        app:documentView_textSize="18sp" />


</LinearLayout>
    </ScrollView>
</RelativeLayout>
